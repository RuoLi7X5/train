// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  COACH
  STUDENT
}

enum UserStatus {
  PENDING
  ACTIVE
  DISABLED
}

enum PushStatus {
  ACTIVE
  EXPIRED
  COMPLETED
}

enum PlacementMode {
  BLACK_ONLY
  WHITE_ONLY
  ALTERNATE
}

enum FirstPlayer {
  BLACK
  WHITE
}

model Class {
  id        Int      @id @default(autoincrement())
  name      String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  coachId   Int?     // Optional for migration
  coach     User?    @relation("CoachClasses", fields: [coachId], references: [id])
  
  students  User[]   @relation("StudentClass")
  problems  Problem[]

  @@unique([name, coachId])
}

model User {
  id          Int          @id @default(autoincrement())
  username    String       @unique
  password    String
  displayName String?
  role        Role         @default(STUDENT)
  status      UserStatus   @default(ACTIVE)
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  // Student fields
  classId     Int?
  class       Class?       @relation("StudentClass", fields: [classId], references: [id])
  
  coachId     Int?
  coach       User?        @relation("CoachStudents", fields: [coachId], references: [id])
  
  // Coach fields
  students    User[]       @relation("CoachStudents")
  teachingClasses Class[]  @relation("CoachClasses")
  createdProblems Problem[] @relation("CoachProblems")
  
  submissions Submission[]
  gradedSubmissions Submission[] @relation("SubmissionGrader")
  comments    Comment[]
  studentPushes ProblemPush[] @relation("StudentPushes")
  coachPushes   ProblemPush[] @relation("CoachPushes")
}

model Problem {
  id            Int          @id @default(autoincrement())
  date          String       // Format: YYYY-MM-DD
  publishAt     DateTime?
  content       String
  imageUrl      String?
  
  // 官方答案
  answerContent String?
  answerImage   String?
  answerReleaseDate DateTime? // 新增：答案发布时间，默认是题目日期后24小时
  boardData     Json?
  answerMoves   Json?
  placementMode PlacementMode?
  firstPlayer   FirstPlayer?

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  
  submissions   Submission[]
  comments      Comment[]
  pushes        ProblemPush[]

  // New fields
  authorId      Int?
  author        User?        @relation("CoachProblems", fields: [authorId], references: [id])

  classId       Int?
  class         Class?       @relation(fields: [classId], references: [id])

  // Unique constraint: A coach can only have one problem per day
  @@unique([date, authorId])
}

model Submission {
  id        Int      @id @default(autoincrement())
  content   String?
  imageUrl  String?
  moves     Json?
  elapsedSeconds Int?
  isTimeout Boolean @default(false)
  status    String   @default("PENDING") // "PENDING", "CORRECT", "WRONG"
  feedback  String?
  gradedAt DateTime?
  gradedById Int?
  gradedBy User? @relation("SubmissionGrader", fields: [gradedById], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  problemId Int
  problem   Problem  @relation(fields: [problemId], references: [id])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
  
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  problemId Int
  problem   Problem  @relation(fields: [problemId], references: [id])
}

model ProblemPush {
  id        Int        @id @default(autoincrement())
  problemId Int
  problem   Problem    @relation(fields: [problemId], references: [id])
  studentId Int
  student   User       @relation("StudentPushes", fields: [studentId], references: [id])
  coachId   Int
  coach     User       @relation("CoachPushes", fields: [coachId], references: [id])
  pushedAt  DateTime   @default(now())
  dueAt     DateTime?
  status    PushStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([problemId, studentId])
}
